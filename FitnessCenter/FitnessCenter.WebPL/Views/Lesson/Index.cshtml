@model IEnumerable<FitnessCenter.Entities.Lesson>
@{
    ViewBag.Title = "Index";
}

<h2>Занятия</h2>
<button type="button" class="btn btn-danger">@Html.ActionLink("Add", "Add")</button>
<button type="button" class="btn btn-danger">@Html.ActionLink("LessonByCoach", "LessonByCoach")</button>
<button type="button" class="btn btn-danger">@Html.ActionLink("LessonByClient", "LessonByClient")</button>
<button type="button" class="btn btn-danger">@Html.ActionLink("LessonByHall", "LessonByHall")</button>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>IdClinet</th>
            <th>IdHall</th>
            <th>Time</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lesson in Model)
        {
            <tr>
                <th>@lesson.Id</th>
                <th>@lesson.IdClinet</th>
                <th>@lesson.IdHall</th>
                <th>@lesson.Time</th>
                <th>@Html.ActionLink("Delete", "Delete", new { id = lesson.Id })</th>
            </tr>
        }
    </tbody>
</table>