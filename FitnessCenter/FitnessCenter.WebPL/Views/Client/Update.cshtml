@model FitnessCenter.Entities.Client

@{
    ViewBag.Title = "Update";
}

<h2>Update</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Client</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    <hr />
    <div class="modal-body">
        <dl class="dl-horizontal">
            <dt>Фамилия:</dt>
            <dd>@Html.DisplayFor(model => model.FirstName, new { @class = "text-danger" })</dd>

            <dt>Имя:</dt>
            <dd>@Html.DisplayFor(model => model.LastName, new { @class = "text-danger" })</dd>

            <dt>Отчество:</dt>
            <dd>@Html.DisplayFor(model => model.MiddleName, new { @class = "text-danger" })</dd>

            <dt>Номер абонимента:</dt>
            <dd>@Html.DisplayFor(model => model.SubscriptionNumber, new { @class = "text-danger" })</dd>

            <dt>Текущий тренер:</dt>
            <dd>@Html.DisplayFor(model => model.IDCoach, new { @class = "text-danger" })</dd>
        </dl>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.IDCoach, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(m => m.IDCoach, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(m => m.IDCoach, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
